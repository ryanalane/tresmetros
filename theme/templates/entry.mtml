<!DOCTYPE html>
<html>
<head>
    <$mt:Include module="HTML Head"$>
    <$mt:Var name="comments_per_page" value="50"$>
    <mt:EntryPrevious><link rel="prev bookmark" href="<$mt:EntryPermalink$>" title="<$mt:EntryTitle encode_html="1"$>" /></mt:EntryPrevious>
    <mt:EntryNext><link rel="next bookmark" href="<$mt:EntryPermalink$>" title="<$mt:EntryTitle encode_html="1"$>" /></mt:EntryNext>
    <$mt:EntryTrackbackData$>
    <mt:If tag="EntryCommentCount" gt="$comments_per_page">
	    <script type="text/javascript">
         MT.entryID = <$mt:EntryID$>;
         MT.commentsPerPage = <$mt:Var name="comments_per_page"$>;
         MT.entryCommentCount = <$mt:EntryCommentCount$>;
         MT.commentIds = [<mt:Comments sort_order="ascend" glue=","><mt:CommentID></mt:Comments>];
	    </script>
	  </mt:If>
    <title><$mt:EntryTitle encode_html="1"$> - <$mt:BlogName encode_html="1"$></title>
</head>
<body id="<$mt:BlogThemeID$>" class="mt-entry-archive <$mt:Var name="page_layout"$>">

<$mt:Include module="<__trans phrase="Body Javascript Header">"$>

<div class="container-fluid">

    <$mt:Include module="Banner Header"$>
    
    <div class="content_container row-fluid">
        <div class="content span8 arrow_box">
            
            <div class="post" id="entry-<$mt:EntryID$>">
                <span class="date">  
                    <div class="day"><$mt:EntryDate format="%d"$></div>
                    <div class="month_year_row">
                        <$mt:EntryDate format="%b"$> <$mt:EntryDate format="%Y"$>
                    </div>
                </span>
                <h2 class="title"><a href="<$mt:EntryPermalink$>" rel="bookmark"><$mt:EntryTitle$></a></h2>
                    <h3 class="byline">
                <mt:If tag="EntryAuthorDisplayName">
                    escrito por <span class="author_name"><$mt:EntryAuthorLink show_hcard="1"$></span>
                </mt:If>
                    </h3>

                <mt:If tag="EntryBody">
                    <div class="post_content">
                            <$mt:EntryBody$>
                    </div>
                </mt:If>

                <$mt:Include module="<__trans phrase="Entry Footer">"$>

                <$mt:Include module="<__trans phrase="Comments">"$>

            </div>
        </div>

        <$mt:Include module="<__trans phrase="Sidebar">"$>

        <div class="clear"></div>

    </div>

</div>

<$mt:Include module="<__trans phrase="Body Javascript Footer">"$>

</body>
</html>
